#! /usr/bin/env nix-shell
#! nix-shell -i zsh -p qrencode imagemagick

SSH_DIR=$HOME/.ssh
QR_DIR=$(mktemp -d --tmpdir="$SSH_DIR")

function cleanup {
  rm -rf "$QR_DIR"
}

trap cleanup EXIT
trap cleanup SIGINT

for PUB_KEY_PATH in "$SSH_DIR"/id*.pub; do
    PUB_KEY=$(basename "$PUB_KEY_PATH")
    qrencode "$PUB_KEY" -o "$QR_DIR"/"$PUB_KEY".svg
    PRIV_KEY=${PUB_KEY:r}
    qrencode "$PRIV_KEY" -o "$QR_DIR"/"$PRIV_KEY".svg
done

convert "$QR_DIR"/*.svg "$SSH_DIR"/keys-as-qr-codes.pdf
